<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D81B60">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/bookatabletoolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>

                <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
                    android:id="@+id/day_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview_id2"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="#e6f9f9f9">
                </android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18.2dp"
                        android:text="ORDERING"
                        android:textColor="#c2c4ca"
                        android:layout_marginLeft="15.2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="27.2dp"
                        android:layout_marginBottom="20.3dp">
                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Number of person"
                            android:textSize="14.4sp"
                            android:textColor="#9b9b9b"
                            android:layout_marginLeft="15.2dp" />
                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Adults,  3 Children"
                            android:textSize="14.4sp"
                            android:textColor="#262628"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="19dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4.3dp"
                    android:layout_marginBottom="15.7dp"
                    android:background="#ffffff">
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.3dp"
                        android:text="MENU"
                        android:layout_marginLeft="12.5dp"
                        android:textColor="#c2c4ca"
                        android:textSize="14.4sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10.6dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/foodimg1"
                                android:layout_width="62dp"
                                android:layout_height="62dp"
                                android:layout_marginBottom="14.4dp"
                                android:layout_marginTop="14.4dp"
                                android:layout_marginLeft="13.4dp"
                                android:src="@drawable/food"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="3.8dip" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14.4sp"
                                    android:id="@+id/itemname1"
                                    android:layout_marginLeft="13.4dp"
                                    android:text="Cocobolo Poolside Bar + Grill"
                                    android:textColor="#262628"/>
                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11.5sp"
                                    android:id="@+id/itemprice1"
                                    android:layout_marginLeft="13.4dp"
                                    android:layout_marginTop="2dp"
                                    android:text="$ 50.00"
                                    android:textColor="#9b9b9b"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="34.6dp"
                                android:layout_height="34.6dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="16.3dp"
                                android:src="@drawable/ic_checked" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/foodimg2"
                                android:layout_width="62dp"
                                android:layout_height="62dp"
                                android:layout_marginBottom="14.4dp"
                                android:layout_marginTop="14.4dp"
                                android:layout_marginLeft="13.4dp"
                                android:src="@drawable/food"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="3.8dip" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14.4sp"
                                    android:id="@+id/itemname2"
                                    android:layout_marginLeft="13.4dp"
                                    android:text="The White Rabbit"
                                    android:textColor="#262628"/>
                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11.5sp"
                                    android:id="@+id/itemprice2"
                                    android:layout_marginLeft="13.4dp"
                                    android:text="$ 45.00"
                                    android:layout_marginTop="2dp"
                                    android:textColor="#9b9b9b"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="34.6dp"
                                android:layout_height="34.6dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="16.3dp"
                                android:src="@drawable/ic_checked"
                                android:layout_marginTop="7dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/foodimg3"
                                android:layout_width="62dp"
                                android:layout_height="62dp"
                                android:layout_marginBottom="14.4dp"
                                android:layout_marginTop="14.4dp"
                                android:layout_marginLeft="13.4dp"
                                android:src="@drawable/food"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius="3.8dip" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14.4sp"
                                    android:id="@+id/itemname3"
                                    android:layout_marginLeft="13.4dp"
                                    android:text="Burlamacco Ristorante"
                                    android:textColor="#262628"/>
                                <customfonts.MyTextView_Roboto_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="11.5sp"
                                    android:id="@+id/itemprice3"
                                    android:layout_marginLeft="13.4dp"
                                    android:text="$ 29.00"
                                    android:layout_marginTop="2dp"
                                    android:textColor="#9b9b9b"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="34.6dp"
                                android:layout_height="34.6dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="16.3dp"
                                android:src="@drawable/ic_add_"/>

                        </LinearLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5"/>


                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="17.2dp"
                        android:text="View more"
                        android:textSize="15.7sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10.7dp"
        android:background="#D81B60">
        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttotal"
            android:text="TOTAL : $ 312.00"
            android:textSize="14.4sp"
            android:padding="15.4dp"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="15.4dp"
            android:layout_weight="1">
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtorder"
                android:textColor="#ffffff"
                android:textSize="14.4sp"
                android:text="ORDER"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>